/* 弹窗容器 */
.edit-persona-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.edit-persona-modal.show {
  opacity: 1;
  visibility: visible;
}

/* 遮罩层 */
.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 弹窗内容 */
.modal-content {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: calc(100% - 80rpx);
  max-height: 85vh;
  overflow: hidden;
  box-shadow:
    0 20rpx 60rpx rgba(0, 0, 0, 0.3),
    0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  transform: scale(0.7) translateY(50rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid #e9ecef;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 10000;
}

.edit-persona-modal.show .modal-content {
  transform: scale(1) translateY(0);
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx 32rpx;
  border-bottom: 1rpx solid #e9ecef;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  flex-shrink: 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin: 0;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  line-height: 1;
  padding: 0;
}

.close-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

/* 弹窗主体 */
.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
  background: #ffffff;
}

/* 表单组 */
.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.form-label.required::after {
  content: '*';
  color: #dc3545;
  margin-left: 4rpx;
  font-weight: bold;
}

/* 输入框 */
.form-input {
  width: 100%;
  padding: 28rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: white;
  box-sizing: border-box;
  min-height: 88rpx;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-input.error {
  border-color: #dc3545;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: white;
  box-sizing: border-box;
  line-height: 1.6;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-textarea:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-textarea.error {
  border-color: #dc3545;
}

/* 字数统计 */
.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 错误提示 */
.error-text {
  display: block;
  font-size: 24rpx;
  color: #dc3545;
  margin-top: 8rpx;
  font-weight: 500;
}

/* 头像选择区域 */
.avatar-group {
  margin-bottom: 32rpx;
}

.avatar-section {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border: 4rpx solid #e0e0e0;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar-preview:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.avatar-preview.default {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
}

.avatar-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-placeholder {
  font-size: 48rpx;
  color: #fff;
  font-weight: 300;
}

.avatar-actions {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.avatar-btn {
  padding: 20rpx 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.2);
}

.avatar-btn:active {
  background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.avatar-btn.secondary {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #495057;
  border: 2rpx solid #dee2e6;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.avatar-btn.secondary:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #e9ecef;
  background: #fafafa;
  flex-shrink: 0;
}

.btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
}

.btn-cancel {
  background: linear-gradient(135deg, #f5f5f5 0%, #e9ecef 100%);
  color: #495057;
  border: 2rpx solid #dee2e6;
}

.btn-cancel:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-submit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.2);
}

.btn-submit:active {
  background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.btn-submit.disabled {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  color: #6c757d;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.btn-submit.disabled:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: none;
  box-shadow: none;
}



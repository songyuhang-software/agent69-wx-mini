/* components/email/email.wxss */

/* 邮箱组件容器 */
.email-component {
  width: 100%;
}

/* 邮箱状态显示区域 */
.email-status {
  background: #ffffff;
  border: 1rpx solid #e6e6e6;
  border-radius: 16rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.25s ease;
  position: relative;
}

/* 激活状态的邮箱卡片样式 */
.email-status.active {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-color: #007bff;
  box-shadow:
    0 16rpx 40rpx rgba(0, 123, 255, 0.12),
    0 8rpx 16rpx rgba(0, 0, 0, 0.08),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.9);
  transform: translateY(-2rpx);
}

/* 邮箱信息 */
.email-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.email-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  background: #f0f9ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
  border: 1rpx solid #e6f4ff;
  transition: all 0.25s ease;
}

/* 激活状态时图标的高亮效果 */
.email-status.active .email-icon {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-color: #007bff;
  transform: scale(1.05);
  color: #007bff;
}

.email-details {
  flex: 1;
  min-width: 0;
}

.email-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
  font-weight: 500;
}

.email-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 邮箱操作 */
.email-actions {
  flex-shrink: 0;
}

.action-button {
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 14rpx 50rpx;
  font-size: 24rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.25s ease;
  white-space: nowrap;
  box-shadow: 0 2rpx 4rpx rgba(24, 144, 255, 0.2);
}

.action-button:active {
  background: #0066cc;
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 8rpx rgba(24, 144, 255, 0.3);
}

.action-button.danger {
  background: #ff4d4f;
  box-shadow: 0 2rpx 4rpx rgba(255, 77, 79, 0.2);
}

.action-button.danger:active {
  background: #d73027;
  box-shadow: 0 4rpx 8rpx rgba(255, 77, 79, 0.3);
}

/* 操作界面 */
.email-operation {
  background: white;
  border: 1rpx solid #e6e6e6;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 操作头部 */
.operation-header {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  color: white;
  height: 60rpx;          
  padding: 0 28rpx;        
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.operation-title {
  font-size: 46rpx;
  font-weight: 600;
  margin: 0;
  line-height: 1.0;
}

.operation-close {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #e6e6e6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  cursor: pointer;
  transition: all 0.25s ease;
}

.operation-close:active {
  background: #d6d6d6;
  transform: scale(0.95);
}

/* 操作主体 */
.operation-body {
  padding: 28rpx;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  display: block;
  margin-bottom: 12rpx;
  font-weight: 600;
  color: #333;
  font-size: 26rpx;
}

.email-input,
.code-input {
  width: 100%;
  padding: 18rpx 20rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  transition: border-color 0.25s ease, box-shadow 0.25s ease;
  box-sizing: border-box;
  background: white;
  min-height: 80rpx;
}

.email-input:focus,
.code-input:focus {
  outline: none;
  border-color: #1890ff;
  box-shadow: 0 0 0 3rpx rgba(24, 144, 255, 0.1);
}

.email-input.readonly {
  background-color: #f5f5f5;
  color: #666;
}

/* 邮箱验证状态 */
.email-validation {
  margin-top: 12rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
}

.validation-text {
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.validation-text.valid {
  color: #52c41a;
}

.validation-text.valid::before {
  content: '✓';
  font-weight: bold;
}

.validation-text.invalid {
  color: #ff4d4f;
}

.validation-text.invalid::before {
  content: '✗';
  font-weight: bold;
}

/* 验证码输入容器 */
.code-input-container {
  display: flex;
  gap: 16rpx;
  align-items: stretch;
}

.code-input {
  flex: 1;
}

/* 发送验证码按钮 */
.send-code-btn {
  padding: 0 20rpx;
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 8rpx;
  cursor: pointer;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
  transition: all 0.25s ease;
  box-shadow: 0 2rpx 4rpx rgba(24, 144, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 80rpx;
  flex-shrink: 0;
}

.send-code-btn:active {
  background: #0066cc;
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 8rpx rgba(24, 144, 255, 0.3);
}

.send-code-btn.disabled {
  background: #f5f5f5;
  color: #999;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.send-code-btn.disabled:active {
  background: #f5f5f5;
  color: #999;
  transform: none;
  box-shadow: none;
}

/* 操作底部 */
.operation-footer {
  padding: 20rpx 28rpx;
  border-top: 1rpx solid #e6e6e6;
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
  background: #fafafa;
}

.cancel-btn,
.confirm-btn {
  padding: 12rpx 24rpx;
  border: none;
  border-radius: 8rpx;
  cursor: pointer;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.25s ease;
  min-width: 120rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.cancel-btn:active {
  background: #e8e8e8;
  transform: translateY(-1rpx);
}

.confirm-btn {
  background: #1890ff;
  color: white;
  box-shadow: 0 2rpx 4rpx rgba(24, 144, 255, 0.2);
}

.confirm-btn:active {
  background: #0066cc;
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 8rpx rgba(24, 144, 255, 0.3);
}

/* 响应式适配 */
@media (max-width: 480px) {
  .email-status {
    padding: 24rpx;
    margin-bottom: 20rpx;
  }

  .operation-header {
    padding: 18rpx 24rpx;
  }

  .operation-title {
    font-size: 26rpx;
  }

  .operation-body {
    padding: 24rpx;
  }

  .operation-footer {
    padding: 16rpx 24rpx;
  }

  .code-input-container {
    gap: 12rpx;
  }

  .send-code-btn {
    width: auto;
    height: 80rpx;
    font-size: 22rpx;
    padding: 0 16rpx;
    min-width: 100rpx;
  }

  .email-input,
  .code-input {
    font-size: 28rpx;
    padding: 16rpx 18rpx;
    min-height: 76rpx;
  }

  .code-input {
    flex: 1;
  }
}
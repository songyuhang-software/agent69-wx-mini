/* components/email/email.wxss */

/* 邮箱组件容器 */
.email-component {
  width: 100%;
}

/* 邮箱状态显示区域 */
.email-status {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border: 1rpx solid #e9ecef;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.06),
    0 2rpx 6rpx rgba(0, 0, 0, 0.04),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.email-status::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx 20rpx 0 0;
}

/* 邮箱信息 */
.email-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
  min-width: 0;
}

.email-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
  border: 2rpx solid #dee2e6;
  transition: all 0.3s ease;
}

.email-status:hover .email-icon {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-color: #667eea;
  transform: scale(1.05);
  color: #667eea;
}

.email-details {
  flex: 1;
  min-width: 0;
}

.email-label {
  display: block;
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  font-weight: 500;
}

.email-value {
  font-size: 30rpx;
  color: #212529;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 邮箱操作 */
.email-actions {
  flex-shrink: 0;
}

.action-button {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
  box-shadow: 0 4rpx 8rpx rgba(0, 123, 255, 0.2);
}

.action-button:active {
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 123, 255, 0.3);
}

.action-button.danger {
  background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
  box-shadow: 0 4rpx 8rpx rgba(220, 53, 69, 0.2);
}

.action-button.danger:active {
  background: linear-gradient(135deg, #c82333 0%, #a71e2a 100%);
  box-shadow: 0 8rpx 16rpx rgba(220, 53, 69, 0.3);
}

/* 操作界面 */
.email-operation {
  background: white;
  border: 1rpx solid #e9ecef;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 操作头部 */
.operation-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.operation-title {
  font-size: 32rpx;
  font-weight: 600;
  margin: 0;
}

.operation-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.operation-close:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 操作主体 */
.operation-body {
  padding: 40rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  margin-bottom: 16rpx;
  font-weight: 600;
  color: #333;
  font-size: 28rpx;
}

.email-input,
.code-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
  box-sizing: border-box;
  background: white;
}

.email-input:focus,
.code-input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.email-input.readonly {
  background-color: #f5f5f5;
  color: #666;
}

/* 邮箱验证状态 */
.email-validation {
  margin-top: 12rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
}

.validation-text {
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.validation-text.valid {
  color: #28a745;
}

.validation-text.valid::before {
  content: '✓';
  font-weight: bold;
}

.validation-text.invalid {
  color: #dc3545;
}

.validation-text.invalid::before {
  content: '✗';
  font-weight: bold;
}

/* 验证码输入容器 */
.code-input-container {
  display: flex;
  gap: 20rpx;
}

.code-input {
  flex: 1;
}

/* 发送验证码按钮 */
.send-code-btn {
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  cursor: pointer;
  font-size: 26rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 8rpx rgba(0, 123, 255, 0.2);
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 160rpx;
}

.send-code-btn:active {
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 123, 255, 0.3);
}

.send-code-btn.disabled {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  color: #6c757d;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.send-code-btn.disabled:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: none;
  box-shadow: none;
}

/* 操作底部 */
.operation-footer {
  padding: 32rpx 40rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
  background: #fafafa;
}

.cancel-btn,
.confirm-btn {
  padding: 20rpx 40rpx;
  border: none;
  border-radius: 12rpx;
  cursor: pointer;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.cancel-btn:active {
  background: #e0e0e0;
  transform: translateY(-2rpx);
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.2);
}

.confirm-btn:active {
  background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

/* 响应式适配 */
@media (max-width: 480px) {
  .email-status {
    padding: 24rpx;
  }

  .operation-body {
    padding: 32rpx;
  }

  .operation-footer {
    padding: 24rpx 32rpx;
  }

  .code-input-container {
    flex-direction: column;
    gap: 16rpx;
  }

  .send-code-btn {
    width: 100%;
  }
}
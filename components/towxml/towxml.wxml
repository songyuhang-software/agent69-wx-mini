<!-- towxml.wxml -->
<view class="towxml-container">
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="towxml-loading">
    <text>解析中...</text>
  </view>

  <!-- 内容区域 - 使用rich-text组件渲染HTML -->
  <view wx:else class="towxml-content {{theme}}">
    <rich-text nodes="{{nodes}}" bindtap="onLinkTap"></rich-text>
  </view>
</view>
/* towxml.wxss */
.towxml-container {
  width: 100%;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.towxml-loading {
  padding: 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.towxml-error {
  padding: 20rpx;
  text-align: center;
  color: #f56c6c;
  font-size: 28rpx;
}

.towxml-content {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
}

.towxml-content.dark {
  color: #fff;
}

.towxml-content.wechat {
  color: #333;
}

/* 标题样式 */
.towxml-h {
  margin: 30rpx 0 20rpx 0;
  font-weight: bold;
  line-height: 1.4;
}

.towxml-h1 {
  font-size: 40rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 10rpx;
}

.towxml-h2 {
  font-size: 36rpx;
}

.towxml-h3 {
  font-size: 32rpx;
}

.towxml-h4 {
  font-size: 30rpx;
}

.towxml-h5 {
  font-size: 28rpx;
}

.towxml-h6 {
  font-size: 26rpx;
}

/* 段落样式 */
.towxml-p {
  margin: 20rpx 0;
  word-wrap: break-word;
}

/* 代码样式 */
.towxml-code {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f6f8fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #e1e4e8;
  overflow-x: auto;
}

.towxml-pre {
  margin: 0;
  font-family: 'Monaco', 'Consolas', 'Courier New', monospace;
  font-size: 28rpx;
  line-height: 1.5;
  white-space: pre-wrap;
  word-wrap: break-word;
}

/* 行内代码 */
.towxml-code-inline {
  background-color: #f6f8fa;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-family: 'Monaco', 'Consolas', 'Courier New', monospace;
  font-size: 26rpx;
  color: #e74c3c;
}

/* 列表样式 */
.towxml-ul {
  margin: 20rpx 0;
  padding-left: 40rpx;
}

.towxml-ol {
  margin: 20rpx 0;
  padding-left: 40rpx;
}

.towxml-li {
  margin: 10rpx 0;
  list-style: disc;
}

.towxml-ol .towxml-li {
  list-style: decimal;
}

/* 引用样式 */
.towxml-blockquote {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f6f8fa;
  border-left: 4rpx solid #e1e4e8;
  border-radius: 0 8rpx 8rpx 0;
}

.towxml-blockquote .towxml-p {
  margin: 0;
  color: #555;
  font-style: italic;
}

/* 分割线 */
.towxml-hr {
  margin: 40rpx 0;
  border: none;
  border-top: 1rpx solid #e1e4e8;
}

/* 文本格式化 */
.towxml-strong {
  font-weight: bold;
  color: #000;
}

.towxml-em {
  font-style: italic;
  color: #555;
}

.towxml-del {
  text-decoration: line-through;
  color: #999;
}

/* 链接样式 */
.towxml-a {
  color: #0366d6;
  text-decoration: underline;
  word-break: break-all;
}

/* 主题变体 */
.towxml-content.dark {
  background-color: #1e1e1e;
  color: #fff;
}

.towxml-content.dark .towxml-code {
  background-color: #2d2d2d;
  border-left-color: #555;
}

.towxml-content.dark .towxml-blockquote {
  background-color: #2d2d2d;
  border-left-color: #555;
}

.towxml-content.dark .towxml-hr {
  border-top-color: #555;
}

.towxml-content.dark .towxml-strong {
  color: #fff;
}

.towxml-content.dark .towxml-em {
  color: #ccc;
}

.towxml-content.dark .towxml-a {
  color: #58a6ff;
}

/* 微信主题 */
.towxml-content.wechat {
  color: #333;
}

.towxml-content.wechat .towxml-a {
  color: #576b95;
}

/* 响应式设计 */
@media (max-width: 480px) {
  .towxml-content {
    font-size: 30rpx;
  }

  .towxml-h1 {
    font-size: 38rpx;
  }

  .towxml-h2 {
    font-size: 34rpx;
  }

  .towxml-h3 {
    font-size: 30rpx;
  }

  .towxml-pre {
    font-size: 26rpx;
  }
}
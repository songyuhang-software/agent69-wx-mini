/* pages/auth-select/auth-select.wxss */
page {
  background-color: #f7f8fa;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  min-height: 100vh;
  padding: 0;
  background-color: #f7f8fa;
}

/* 顶部品牌区域 */
.header {
  width: 100%;
  padding: 120rpx 0 60rpx;
  text-align: center;
}

.logo {
  font-size: 64rpx;
  font-weight: bold;
  color: #667eea;
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
}

.slogan {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 中间装饰区域 */
.decoration {
  flex: 1;
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 300rpx;
}

.circle {
  position: absolute;
  border-radius: 50%;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  background-color: #e8eaf6;
  top: 10%;
  left: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  background-color: #fce4ec;
  top: 40%;
  right: -80rpx;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  background-color: #e1f5fe;
  bottom: 30%;
  left: 50%;
  margin-left: -100rpx;
}

/* 底部操作区域 */
.bottom-section {
  width: 100%;
  padding: 0 60rpx 80rpx;
}

.welcome-text {
  font-size: 32rpx;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 40rpx;
  font-weight: 500;
}

/* 微信授权按钮 */
.wechat-auth-btn {
  width: 100%;
  height: 96rpx;
  background-color: #07c160;
  border-radius: 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 96rpx;
  margin-bottom: 40rpx;
}

.wechat-auth-btn::after {
  border: none;
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 已有账号链接 */
.bind-link-wrapper {
  text-align: center;
  padding: 20rpx 0;
}

.bind-text {
  font-size: 26rpx;
  color: #95a5a6;
}

.bind-link {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
  text-decoration: underline;
}




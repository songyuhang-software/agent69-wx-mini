/* pages/bind-account/bind-account.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.login-container {
  background: white;
  padding: 60rpx;
  border-radius: 24rpx;
  box-shadow: 0 40rpx 120rpx rgba(0, 0, 0, 0.15);
  width: 100%;
  max-width: 640rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a202c;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #718096;
  display: block;
}

/* 选项卡 */
.login-tabs {
  display: flex;
  border-bottom: 4rpx solid #e2e8f0;
  margin-bottom: 50rpx;
}

.tab-button {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  position: relative;
  font-size: 28rpx;
  font-weight: 500;
  color: #718096;
  transition: color 0.3s ease;
}

.tab-button.active {
  color: #667eea;
}

.tab-button.active::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #667eea;
}

/* 表单内容 */
.tab-content {
  display: none;
}

.tab-content.active {
  display: block;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-group {
  margin-bottom: 36rpx;
}

.label {
  display: block;
  margin-bottom: 16rpx;
  color: #2d3748;
  font-size: 28rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  padding: 20rpx 28rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: white;
  box-sizing: border-box;
}

.input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

/* 密码输入框 */
.password-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.password-input {
  padding-right: 90rpx !important;
}

.toggle-password-btn {
  position: absolute;
  right: 24rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eye-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 验证码输入框 */
.code-input-wrapper {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  flex: 0 0 200rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
}

.send-code-btn[disabled] {
  background: #cbd5e0;
  opacity: 0.6;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-top: 20rpx;
}

.login-button[disabled] {
  background: #cbd5e0;
  opacity: 0.6;
}

/* 错误提示 */
.error-message {
  background: #fed7d7;
  border: 2rpx solid #feb2b2;
  border-left: 8rpx solid #e53e3e;
  color: #c53030;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  line-height: 1.4;
  display: none;
}

.error-message.show {
  display: block;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


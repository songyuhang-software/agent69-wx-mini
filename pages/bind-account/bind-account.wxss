/* pages/bind-account/bind-account.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.login-container {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.12);
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

/* 适配大屏设备 */
@media (min-width: 768px) {
  .login-container {
    max-width: 500rpx;
    padding: 50rpx;
  }
}

.login-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1a202c;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.subtitle {
  font-size: 26rpx;
  color: #718096;
  display: block;
  line-height: 1.4;
}

/* 选项卡 */
.login-tabs {
  display: flex;
  border-bottom: 2rpx solid #e2e8f0;
  margin-bottom: 40rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 6rpx;
  box-sizing: border-box;
}

.tab-button {
  flex: 1;
  padding: 24rpx 16rpx;
  text-align: center;
  position: relative;
  font-size: 28rpx;
  font-weight: 500;
  color: #64748b;
  transition: all 0.3s ease;
  border-radius: 8rpx;
}

.tab-button.active {
  color: #667eea;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.15);
}

.tab-button.active::after {
  display: none;
}

/* 表单内容 */
.tab-content {
  display: none;
}

.tab-content.active {
  display: block;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-group {
  margin-bottom: 36rpx;
}

.label {
  display: block;
  margin-bottom: 14rpx;
  color: #374151;
  font-size: 26rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 96rpx;
  padding: 0 20rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 16rpx;
  font-size: 32rpx;
  background: #ffffff;
  box-sizing: border-box;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.input::placeholder {
  color: #9ca3af;
  font-size: 32rpx;
}

.input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
  outline: none;
}

.input::placeholder {
  color: #9ca3af;
  font-size: 32rpx;
  line-height: 96rpx;
}

/* 密码输入框 */
.password-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.password-input {
  padding-right: 100rpx !important;
}

.toggle-password-btn {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  background: none;
  padding: 0;
}

.eye-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 验证码输入框 */
.code-input-wrapper {
  display: flex;
  gap: 20rpx;
  align-items: stretch;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  flex: 0 0 200rpx;
  padding: 32rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  line-height: 1.3;
  transition: all 0.3s ease;
  min-height: 96rpx;
}

.send-code-btn:active {
  transform: scale(0.98);
}

.send-code-btn[disabled] {
  background: #d1d5db;
  color: #9ca3af;
  transform: none;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  padding: 26rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-top: 24rpx;
  transition: all 0.3s ease;
}

.login-button:active {
  transform: scale(0.98);
}

.login-button[disabled] {
  background: #d1d5db;
  color: #9ca3af;
  transform: none;
}

/* 错误提示 */
.error-message {
  background: #fef2f2;
  border: 1rpx solid #fecaca;
  border-left: 6rpx solid #ef4444;
  color: #dc2626;
  padding: 20rpx 24rpx;
  border-radius: 10rpx;
  margin-top: 24rpx;
  font-size: 26rpx;
  line-height: 1.4;
  display: none;
  animation: slideDown 0.3s ease;
}

.error-message.show {
  display: block;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式调整 */
@media (max-width: 375px) {
  .container {
    padding: 20rpx 16rpx;
  }

  .login-container {
    padding: 32rpx 24rpx;
  }

  .title {
    font-size: 40rpx;
  }

  .subtitle {
    font-size: 24rpx;
  }

  .send-code-btn {
    flex: 0 0 160rpx;
    font-size: 22rpx;
  }
}

























































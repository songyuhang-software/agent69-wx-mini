/* 页面容器 */
.edit-persona-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  display: flex;
  flex-direction: column;
  padding-top: 88rpx; /* 为导航栏留出空间 */
}

/* 页面内容 */
.page-content {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
  padding-bottom: calc(136rpx + env(safe-area-inset-bottom)); /* 为底部按钮预留空间 */
  background: #ffffff;
}

/* 表单组 */
.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.form-label.required::after {
  content: '*';
  color: #dc3545;
  margin-left: 4rpx;
  font-weight: bold;
}

/* 输入框 */
.form-input {
  width: 100%;
  padding: 28rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
  background: white;
  box-sizing: border-box;
  min-height: 100rpx;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-input.error {
  border-color: #dc3545;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  max-height: 400rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
  background: white;
  box-sizing: border-box;
  line-height: 1.6;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.form-textarea:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.form-textarea.error {
  border-color: #dc3545;
}

/* 字数统计 */
.textarea-counter {
  text-align: right;
  font-size: 28rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 错误提示 */
.error-text {
  display: block;
  font-size: 28rpx;
  color: #dc3545;
  margin-top: 8rpx;
  font-weight: 500;
}

/* 头像选择区域 */
.avatar-group {
  margin-bottom: 32rpx;
}

.avatar-preview-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
  position: relative;
}

.avatar-preview.no-avatar {
  border: 4rpx dashed #e0e0e0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  cursor: pointer;
}

.avatar-preview.no-avatar:active {
  border-color: #667eea;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  transform: scale(0.95);
}

.avatar-preview.has-avatar {
  border: 4rpx solid #667eea;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.avatar-preview.has-avatar:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  color: #a0aec0;
}

.avatar-icon {
  font-size: 48rpx;
}

.avatar-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #718096;
}

/* 换一个链接 */
.avatar-change-hint {
  margin-top: 8rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.avatar-change-link {
  color: #667eea;
  font-size: 30rpx;
  font-weight: 500;
  text-decoration: underline;
  cursor: pointer;
}

.avatar-change-link:active {
  color: #5a67d8;
  opacity: 0.8;
}

/* 操作按钮区域 */
.avatar-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
  margin-top: 4rpx;
}

.avatar-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 23rpx 32rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.avatar-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  width: 55%;
  margin: 0 auto;
}

.avatar-btn.primary:active {
  background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  width: 55%;
  margin: 0 auto;
}

.avatar-btn.random {
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: #fff;
  width: 55%;
  margin: 0 auto;
}

.avatar-btn.random:active {
  background: linear-gradient(135deg, #38a169 0%, #2f855a 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(72, 187, 120, 0.3);
  width: 55%;
  margin: 0 auto;
}

.avatar-btn.danger {
  background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
  color: #fff;
  width: 55%;
  margin: 0 auto;
}

.avatar-btn.danger:active {
  background: linear-gradient(135deg, #c82333 0%, #a71e2a 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(220, 53, 69, 0.3);
  width: 55%;
  margin: 0 auto;
}

.btn-icon {
  font-size: 32rpx;
  line-height: 1;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 1;
}

/* 帮助文本 */
.avatar-help-text {
  text-align: center;
  font-size: 26rpx;
  color: #a0aec0;
  line-height: 1.4;
  margin-top: 8rpx;
  padding: 26rpx 10rpx;
}

/* 页面底部 */
.page-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #e9ecef;
  background: #fafafa;
  flex-shrink: 0;
  z-index: 100;
}

.btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
}

.btn-cancel {
  background: linear-gradient(135deg, #f5f5f5 0%, #e9ecef 100%);
  color: #495057;
  border: 2rpx solid #dee2e6;
}

.btn-cancel:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-submit {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.2);
}

.btn-submit:active {
  background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.btn-submit.disabled {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  color: #6c757d;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.btn-submit.disabled:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: none;
  box-shadow: none;
}
















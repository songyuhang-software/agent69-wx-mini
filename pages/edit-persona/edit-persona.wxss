/* pages/edit-persona/edit-persona.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 200rpx; /* 为底部按钮留出空间 */
}

.form-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.form-group {
  margin-bottom: 40rpx;
  position: relative;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.required {
  color: #ff4444;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-input:focus {
  background-color: #fff;
  border-color: #07c160;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  line-height: 1.6;
}

.form-textarea:focus {
  background-color: #fff;
  border-color: #07c160;
}

.char-count {
  position: absolute;
  right: 0;
  bottom: -32rpx;
  font-size: 24rpx;
  color: #999;
}

.avatar-section {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f8f8f8;
  flex-shrink: 0;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
}

.icon-camera {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.placeholder-text {
  font-size: 22rpx;
  color: #999;
}

.avatar-actions {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn-random-avatar,
.btn-upload-avatar,
.btn-remove-avatar {
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  border: none;
}

.btn-random-avatar {
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: #fff;
}

.btn-upload-avatar {
  background: linear-gradient(135deg, #667eea 0%, #5a67d8 100%);
  color: #fff;
}

.btn-remove-avatar {
  background: linear-gradient(135deg, #e53e3e 0%, #c53030 100%);
  color: #fff;
}

.avatar-change-hint {
  margin-top: 8rpx;
  text-align: center;
}

.btn-change-avatar {
  background: transparent;
  border: none;
  color: #667eea;
  font-size: 26rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  text-decoration: underline;
}

.avatar-hint {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 底部操作栏 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.actions-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #e5e5e5 20%, #e5e5e5 80%, transparent);
  margin-bottom: 20rpx;
}

.button-group {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  align-items: center;
}

.btn-save {
  flex: 2;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a850 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.btn-save[disabled] {
  background: #ccc;
  box-shadow: none;
}

.btn-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.btn-cancel {
  flex: 1;
  height: 88rpx;
  background-color: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 44rpx;
  font-size: 28rpx;
}




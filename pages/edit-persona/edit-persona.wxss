/* pages/edit-persona/edit-persona.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.form-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.form-group {
  margin-bottom: 40rpx;
  position: relative;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.required {
  color: #ff4444;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-input:focus {
  background-color: #fff;
  border-color: #07c160;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  line-height: 1.6;
}

.form-textarea:focus {
  background-color: #fff;
  border-color: #07c160;
}

.char-count {
  position: absolute;
  right: 0;
  bottom: -32rpx;
  font-size: 24rpx;
  color: #999;
}

.avatar-section {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f8f8f8;
  flex-shrink: 0;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
}

.icon-camera {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.placeholder-text {
  font-size: 22rpx;
  color: #999;
}

.avatar-actions {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn-remove-avatar {
  background-color: #fff;
  border: 2rpx solid #ddd;
  color: #666;
  font-size: 24rpx;
}

.avatar-hint {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.button-group {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.btn-save {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a850 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.btn-save[disabled] {
  background: #ccc;
  box-shadow: none;
}

.btn-cancel {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  color: #666;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
  font-size: 32rpx;
}

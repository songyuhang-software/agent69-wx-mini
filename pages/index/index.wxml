<!--index.wxml-->
<view class="menu-container">
  <!-- 顶部品牌区域 -->
  <view class="header-section">
    <view class="logo-container">
      <view class="logo-icon">🤖</view>
      <view class="logo-text">AI 智能助手</view>
    </view>
    <view class="tagline">让 AI 成为你的智能伙伴</view>
  </view>

  <!-- 功能卡片区域 -->
  <view class="content-section">
    <view class="section-title">探索功能</view>
    <view class="grid">
      <view 
        wx:for="{{visibleCards}}" 
        wx:key="id"
        class="card {{item.disabled ? 'disabled' : ''}}"
        hover-class="{{item.disabled ? '' : 'card-hover'}}"
        hover-stay-time="100"
        hover-start-time="0"
        bindtap="handleCardTap"
        data-action="{{item.action}}"
        data-disabled="{{item.disabled}}"
      >
        <view class="icon">{{item.icon}}</view>
        <text class="label">{{item.label}}</text>
      </view>
    </view>
  </view>
</view>

<!-- 功能开发中弹窗 -->
<view class="modal-overlay" wx:if="{{showModal}}" bindtap="hideModal">
  <view class="modal-content" catchtap="">
    <view class="modal-header">
      <view class="modal-icon">🚧</view>
    </view>
    <view class="modal-body">
      <text class="modal-title">功能开发中</text>
      <text class="modal-desc">该功能正在紧张开发中，敬请期待！</text>
    </view>
    <view class="modal-footer">
      <button class="modal-btn" bindtap="hideModal">知道了</button>
    </view>
  </view>
</view>







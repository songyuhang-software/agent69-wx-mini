/**index.wxss**/
page {
  background: linear-gradient(180deg, #E8F4FF 0%, #F0F7FF 50%, #F5F5F5 100%);
  min-height: 100vh;
}

.menu-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部品牌区域 */
.header-section {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #A4D3FF 0%, #7BB3FF 30%, #4A90E2 70%, #2B5FE5 100%);
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(164, 211, 255, 0.3);
  margin-bottom: 40rpx;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.logo-icon {
  font-size: 120rpx;
  margin-bottom: 16rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.logo-text {
  font-size: 52rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 2rpx;
}

.tagline {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
  letter-spacing: 1rpx;
}

/* 内容区域 */
.content-section {
  flex: 1;
  padding: 0 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: -20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #A4D3FF 0%, #2B5FE5 100%);
  border-radius: 3rpx;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
}

.card {
  background-color: white;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  width: calc((100% - 24rpx) / 2);
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #A4D3FF 0%, #2B5FE5 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.card:active:not(.disabled) {
  transform: translateY(-8rpx);
  box-shadow: 0 8rpx 28rpx rgba(74, 144, 226, 0.2);
}

.card:active:not(.disabled)::before {
  opacity: 1;
}

.card.disabled {
  background-color: #fafafa;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

.card.disabled::before {
  display: none;
}

.icon {
  font-size: 88rpx;
  margin-bottom: 24rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.card.disabled .icon {
  opacity: 0.5;
  filter: grayscale(0.3);
}

.label {
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  color: #333;
}

.card.disabled .label {
  color: #999;
  font-weight: 400;
}










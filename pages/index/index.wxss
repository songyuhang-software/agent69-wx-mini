/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  background: #f5f5f5;
}

/* 顶部标题栏 - 使用 JS 动态设置安全区域 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  /* padding-top 通过 style 动态设置 (safeAreaTop + 8px) */
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
}

/* 状态提示 - 使用 JS 动态设置位置 */
.status {
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  /* top 通过 style 动态设置 */
  left: 0;
  z-index: 99;
}

.status.success {
  background: #d4edda;
  color: #155724;
  border-bottom: 1rpx solid #c3e6cb;
}

.status.error {
  background: #f8d7da;
  color: #721c24;
  border-bottom: 1rpx solid #f5c6cb;
}

.status.loading {
  background: #fff3cd;
  color: #856404;
  border-bottom: 1rpx solid #ffeaa7;
}

/* 聊天消息区域 - 使用 JS 动态设置位置 */
.chat-container {
  overflow-y: auto;
  padding: 0;
  background: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  /* top 和 bottom 通过 style 动态设置 */
  left: 0;
  right: 0;
}

.messages-wrapper {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 30rpx 0;
}

/* 消息外层容器 - 控制左右对齐 */
.message-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.user-wrapper {
  align-items: flex-end;
}

.assistant-wrapper {
  align-items: flex-start;
}

/* 消息气泡 - 包裹内容 */
.message {
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  max-width: 70%;
  line-height: 1.4;
  font-size: 28rpx;
  animation: fadeIn 0.3s ease;
  box-sizing: border-box;
  display: inline-block;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 用户消息 */
.user-message {
  background: #667eea;
  color: white;
  border-bottom-right-radius: 6rpx;
}

/* AI 消息 */
.assistant-message {
  background: white;
  color: #333;
  border-bottom-left-radius: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.12),
              0 2rpx 4rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.08);
  width: 100%;
  max-width: 100%;
}

/* 消息内容文字 */
.message-content {
  display: block;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 时间戳 */
.timestamp {
  display: block;
  font-size: 20rpx;
  margin-top: 8rpx;
  opacity: 0.7;
}

.user-message .timestamp {
  color: rgba(255, 255, 255, 0.9);
}

.assistant-message .timestamp {
  color: #999;
}

/* 欢迎消息 */
.welcome-message {
  box-shadow: 0 6rpx 24rpx rgba(255, 193, 7, 0.2),
              0 4rpx 12rpx rgba(255, 152, 0, 0.15),
              0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 193, 7, 0.25);
  background: linear-gradient(135deg, #ffffff 0%, #fffbf0 100%);
  width: auto !important;
  max-width: 85% !important;
}

/* 加载中动画 */
.loading {
  position: relative;
  padding-right: 60rpx !important;
}

.loading::after {
  content: '';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: translateY(-50%) rotate(0deg); }
  100% { transform: translateY(-50%) rotate(360deg); }
}

/* 加载更多提示 */
.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 输入区域 - 使用 JS 动态设置安全区域 */
.input-area {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 40rpx;
  /* padding-bottom 通过 style 动态设置 */
  background: white;
  border-top: 1rpx solid #e0e0e0;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}

.input-field {
  flex: 1;
  padding: 20rpx 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 40rpx;
  font-size: 30rpx;
  background: #f8f8f8;
}

.input-field:focus {
  border-color: #667eea;
  background: white;
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: 600;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.arrow-icon {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
  transform: translateY(-2rpx);
}

.send-button.disabled {
  background: #e0e0e0;
  opacity: 0.6;
  pointer-events: none;
  box-shadow: none;
}

.send-button.disabled .arrow-icon {
  color: #999;
}

/* 发送中状态 */
.send-button.sending {
  pointer-events: none;
  animation: sendingPulse 1.5s ease-in-out infinite;
  box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.7);
}

.send-button.sending .arrow-icon {
  animation: sendingRotate 1.2s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

@keyframes sendingPulse {
  0% {
    box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3),
                0 0 0 0 rgba(102, 126, 234, 0.7);
  }
  50% {
    box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.5),
                0 0 0 20rpx rgba(102, 126, 234, 0);
  }
  100% {
    box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3),
                0 0 0 0 rgba(102, 126, 234, 0);
  }
}

@keyframes sendingRotate {
  0% {
    transform: translateY(-2rpx) rotate(0deg) scale(1);
  }
  25% {
    transform: translateY(-2rpx) rotate(90deg) scale(1.1);
  }
  50% {
    transform: translateY(-2rpx) rotate(180deg) scale(1);
  }
  75% {
    transform: translateY(-2rpx) rotate(270deg) scale(1.1);
  }
  100% {
    transform: translateY(-2rpx) rotate(360deg) scale(1);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.5;
    transform: translateY(-2rpx) scale(0.9);
  }
  50% {
    opacity: 1;
    transform: translateY(-2rpx) scale(1.1);
  }
}

/* 推荐追问样式 */
.suggested-questions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 16rpx;
  width: 100%;
  max-width: 70%;
}

.suggested-question-item {
  background: transparent;
  border: 1rpx solid rgba(0, 0, 0, 0.15);
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 1.4;
  transition: all 0.2s ease;
  cursor: pointer;
  box-sizing: border-box;
}

.suggested-question-item:active {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(0.98);
}

.question-text {
  display: block;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 用户消息不显示推荐追问 */
.user-wrapper .suggested-questions {
  display: none;
}


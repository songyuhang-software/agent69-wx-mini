/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  background: #f5f5f5;
}

/* 顶部标题栏 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 30rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
}

/* 状态提示 */
.status {
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 96rpx;
  left: 0;
  z-index: 99;
}

.status.success {
  background: #d4edda;
  color: #155724;
  border-bottom: 1rpx solid #c3e6cb;
}

.status.error {
  background: #f8d7da;
  color: #721c24;
  border-bottom: 1rpx solid #f5c6cb;
}

.status.loading {
  background: #fff3cd;
  color: #856404;
  border-bottom: 1rpx solid #ffeaa7;
}

/* 聊天消息区域 */
.chat-container {
  overflow-y: auto;
  padding: 30rpx;
  background: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 96rpx;
  bottom: 116rpx;
  left: 0;
  right: 0;
}

.messages-wrapper {
  display: flex;
  flex-direction: column;
  width: 100%;
}

/* 消息样式 */
.message {
  margin-bottom: 16rpx;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  max-width: 70%;
  word-wrap: break-word;
  line-height: 1.4;
  font-size: 28rpx;
  white-space: pre-wrap;
  animation: fadeIn 0.3s ease;
  display: flex;
  flex-direction: column;
  min-height: auto;
  height: auto;
  box-sizing: border-box;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 用户消息 */
.user-message {
  background: #667eea;
  color: white;
  align-self: flex-end;
  border-bottom-right-radius: 6rpx;
}

/* AI 消息 */
.assistant-message {
  background: white;
  color: #333;
  align-self: flex-start;
  border-bottom-left-radius: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.12),
              0 2rpx 4rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.08);
}

/* 消息内容 */
.message-content {
  display: block;
  word-break: break-word;
  overflow-wrap: break-word;
  width: 100%;
}

/* 时间戳 */
.timestamp {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 8rpx;
}

.assistant-message .timestamp {
  color: #999;
}

/* 欢迎消息 */
.welcome-message {
  box-shadow: 0 6rpx 24rpx rgba(255, 193, 7, 0.2),
              0 4rpx 12rpx rgba(255, 152, 0, 0.15),
              0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 193, 7, 0.25);
  background: linear-gradient(135deg, #ffffff 0%, #fffbf0 100%);
}

/* 加载中动画 */
.loading {
  position: relative;
  padding-right: 60rpx !important;
}

.loading::after {
  content: '';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: translateY(-50%) rotate(0deg); }
  100% { transform: translateY(-50%) rotate(360deg); }
}

/* 加载更多提示 */
.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 输入区域 */
.input-area {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 30rpx;
  background: white;
  border-top: 1rpx solid #e0e0e0;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}

.input-field {
  flex: 1;
  padding: 20rpx 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 40rpx;
  font-size: 30rpx;
  background: #f8f8f8;
}

.input-field:focus {
  border-color: #667eea;
  background: white;
}

.send-button {
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  white-space: nowrap;
  line-height: 1.2;
  min-width: 100rpx;
  flex-shrink: 0;
}

.send-button::after {
  border: none;
}

.send-button:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.send-button[disabled] {
  background: #ccc;
  opacity: 0.6;
}

















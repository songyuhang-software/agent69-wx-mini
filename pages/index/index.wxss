/**index.wxss**/
page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.menu-container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.card {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.card:active {
  transform: scale(0.95);
}

.card.disabled {
  background-color: #e0e0e0;
  color: #999;
}

.icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.label {
  font-size: 28rpx;
  text-align: center;
  color: #333;
}

.card.disabled .label {
  color: #999;
}

/* pages/mine/mine.wxss */

/* 页面根元素 */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 页面容器 */
.page-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 滚动区域 */
.scrollarea {
  flex: 1;
  box-sizing: border-box;
  background: #f5f7fa;
}

.modal-body {
  padding: 32rpx;
  box-sizing: border-box;
}

/* 底部占位空白区域 */
.bottom-spacer {
  height: 85rpx;
  width: 100%;
}

/* 用户信息区域 - 增强层次感 */
.user-info-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid #e9ecef;
  box-shadow:
    0 8rpx 24rpx rgba(0, 0, 0, 0.08),
    0 4rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.6);
  position: relative;
  overflow: hidden;
}

.user-info-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #007bff 0%, #0056b3 50%, #004085 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.user-avatar-section {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.user-avatar-large {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  flex-shrink: 0;
  overflow: hidden;
}

.user-avatar-large image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.user-avatar-large.default {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #1976d2;
  font-weight: 500;
  border: 6rpx solid #dee2e6;
}

.user-basic-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #212529;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.username-line {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.username {
  font-size: 28rpx;
  color: #6c757d;
}

.account-action-link {
  color: #007bff;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.bind-account-link {
  color: #9ca3af;
  font-size: 24rpx;
  font-weight: 400;
  opacity: 0.7;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  background: rgba(156, 163, 175, 0.1);
  border: 1rpx solid rgba(156, 163, 175, 0.2);
}

.bind-account-link:active {
  background: rgba(156, 163, 175, 0.15);
  opacity: 0.9;
  transform: scale(0.98);
}

.account-action-links {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.user-bio {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
  margin: 0 0 24rpx 0;
  font-style: italic;
}

.bio-text {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  transition: all 0.3s ease;
}

.bio-text.expanded {
  -webkit-line-clamp: unset;
  display: block;
}

/* 展开/收起按钮样式 */
.bio-toggle-btn {
  color: #007bff;
  font-size: 26rpx;
  font-weight: 500;
  cursor: pointer;
  padding: 8rpx 0;
  margin-top: 8rpx;
  transition: all 0.2s ease;
  text-align: left;
  background: none;
  border: none;
  outline: none;
  -webkit-tap-highlight-color: transparent;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.bio-toggle-btn::after {
  border: none;
}

.bio-toggle-btn:active {
  color: #0056b3;
  background: none;
}

/* 用户底部操作区域 */
.user-footer-actions {
  /* 移除了退出登录功能后的样式调整 */
}

/* ShowBio 开关样式 */
.show-bio-toggle {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  margin: 0 0 24rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.toggle-content {
  flex: 1;
  margin-right: 24rpx;
}

.toggle-label {
  flex: 1;
}

.toggle-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.toggle-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #212529;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  border: 2rpx solid #6c757d;
}

.info-icon:active {
  background: linear-gradient(135deg, #495057 0%, #343a40 100%);
  transform: scale(0.9);
}

.toggle-description {
  display: block;
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.4;
}

.toggle-switch {
  width: 96rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  border-radius: 56rpx;
  border: 2rpx solid #dee2e6;
  position: relative;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  flex-shrink: 0;
}

.toggle-switch.active {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-color: #28a745;
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.3);
}

.switch-button {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 50%;
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow:
    0 2rpx 8rpx rgba(0, 0, 0, 0.15),
    0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #e9ecef;
}

.toggle-switch.active .switch-button {
  transform: translateX(36rpx);
  background: linear-gradient(135deg, #ffffff 0%, #ffffff 100%);
  border-color: #28a745;
  box-shadow:
    0 2rpx 12rpx rgba(40, 167, 69, 0.4),
    0 1rpx 6rpx rgba(0, 0, 0, 0.15);
}

/* 开关点击时的动画效果 */
.toggle-switch:active {
  transform: scale(0.95);
}

.toggle-switch:active .switch-button {
  box-shadow:
    0 1rpx 4rpx rgba(0, 0, 0, 0.2),
    0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 详情卡片 - 提升层次感 */
.detail-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #212529;
  margin: 0 0 24rpx 8rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #007bff, #0056b3);
  border-radius: 4rpx;
}

.detail-card {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border: 1rpx solid #e9ecef;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
  box-shadow:
    0 4rpx 16rpx rgba(0, 0, 0, 0.06),
    0 2rpx 6rpx rgba(0, 0, 0, 0.04),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.detail-card:active {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-color: #007bff;
  box-shadow:
    0 16rpx 40rpx rgba(0, 123, 255, 0.12),
    0 8rpx 16rpx rgba(0, 0, 0, 0.08),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.9);
  transform: translateY(-2rpx);
}

.detail-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
  border: 2rpx solid #dee2e6;
  transition: all 0.3s ease;
}

.detail-card:active .detail-icon {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-color: #007bff;
  transform: scale(1.05);
  color: #007bff;
}

.detail-content {
  flex: 1;
  min-width: 0;
}

.detail-label {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  font-weight: 500;
}

.detail-value {
  font-size: 30rpx;
  color: #212529;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.detail-value text:first-child {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.action-small-btn {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx 28rpx;
  font-size: 24rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
  box-shadow: 0 4rpx 8rpx rgba(0, 123, 255, 0.2);
  flex-shrink: 0;
}

.action-small-btn::after {
  border: none;
}

.action-small-btn:active {
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 123, 255, 0.3);
}

.action-small-btn.danger {
  background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
  box-shadow: 0 4rpx 8rpx rgba(220, 53, 69, 0.2);
}

.action-small-btn.danger:active {
  background: linear-gradient(135deg, #c82333 0%, #a71e2a 100%);
  box-shadow: 0 8rpx 16rpx rgba(220, 53, 69, 0.3);
}

/* 身份管理 */
.personas-section {
  margin-top: 40rpx;
}

.personas-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.personas-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #212529;
}

.add-persona-btn {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: white;
  border: none;
  white-space: nowrap;
  flex-shrink: 0;
  border-radius: 16rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 123, 255, 0.2);
}

.add-persona-btn::after {
  border: none;
}

.add-persona-btn:active {
  background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 16rpx rgba(0, 123, 255, 0.3);
}

.personas-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.persona-card {
  background: linear-gradient(135deg, #ffffff 0%, #fefefe 100%);
  border: 1rpx solid #e9ecef;
  border-radius: 20rpx;
  padding: 24rpx;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1), 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
}

/* 点击时的高亮效果 */
.persona-card.active {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-color: #007bff;
  box-shadow: 0 8rpx 24rpx rgba(0, 123, 255, 0.15), 0 4rpx 8rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

.persona-card.current {
  border-color: #007bff;
  background: linear-gradient(135deg, rgba(0, 123, 255, 0.02) 0%, rgba(0, 123, 255, 0.05) 100%);
  box-shadow: 0 4rpx 16rpx rgba(0, 123, 255, 0.15), 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

/* 当前身份卡片的点击高亮效果 */
.persona-card.current.active {
  background: linear-gradient(135deg, rgba(0, 123, 255, 0.05) 0%, rgba(0, 123, 255, 0.08) 100%);
  border-color: #0056b3;
  box-shadow: 0 12rpx 32rpx rgba(0, 123, 255, 0.2), 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
}

.persona-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.persona-info {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.persona-avatar-small {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  overflow: hidden;
}

.persona-avatar-small image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.persona-avatar-small.default {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #1976d2;
  border: 4rpx solid #1976d2;
}

.persona-details {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.persona-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.persona-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #212529;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.current-badge {
  background: linear-gradient(135deg, #e3f2fd, #bbdefb);
  color: #1976d2;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  white-space: nowrap;
  font-weight: 600;
  border: 1rpx solid rgba(25, 118, 210, 0.3);
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
}

.star-icon {
  font-size: 20rpx;
}

.persona-bio {
  font-size: 26rpx;
  color: #6c757d;
  line-height: 1.5;
  margin: 0;
}

.persona-actions {
  display: flex;
  flex-direction: row;
  gap: 12rpx;
  flex-shrink: 0;
  align-items: center;
}

.action-icon-btn {
  width: 68rpx;
  height: 68rpx;
  border: 2rpx solid #e9ecef;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 16rpx;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  font-size: 28rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  padding: 0;
}

.action-icon-btn::after {
  border: none;
}

.action-icon-btn:active {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-icon-btn.set-default:active {
  background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
  border-color: #ffc107;
  color: #856404;
  box-shadow: 0 4rpx 8rpx rgba(255, 193, 7, 0.3);
}

.action-icon-btn.edit:active {
  background: linear-gradient(135deg, #d1ecf1 0%, #b8daff 100%);
  border-color: #bee5eb;
  color: #0c5460;
  box-shadow: 0 4rpx 8rpx rgba(23, 162, 184, 0.3);
}

.action-icon-btn.delete:active {
  background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
  border-color: #f5c6cb;
  color: #721c24;
  box-shadow: 0 4rpx 8rpx rgba(220, 53, 69, 0.3);
}

.empty-personas {
  text-align: center;
  padding: 64rpx 32rpx;
  color: #6c757d;
  background: #ffffff;
  border-radius: 20rpx;
}

.empty-personas text {
  margin: 0;
  font-size: 28rpx;
  font-style: italic;
}


/* 功能说明弹窗样式 */
.info-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.info-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 80vh;
  overflow: hidden;
  box-shadow:
    0 20rpx 60rpx rgba(0, 0, 0, 0.3),
    0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  transform: scale(0.7) translateY(50rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid #e9ecef;
}

.info-modal.show .modal-content {
  transform: scale(1) translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx 32rpx;
  border-bottom: 1rpx solid #e9ecef;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #212529;
  margin: 0;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  color: #6c757d;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  border: 2rpx solid #dee2e6;
}

.close-btn:active {
  background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
  color: white;
  border-color: #dc3545;
  transform: scale(0.9);
}

.modal-text {
  display: block;
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.modal-examples {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #212529;
  margin-bottom: 16rpx;
  margin-top: 8rpx;
}

.modal-example {
  display: block;
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.5;
  margin-bottom: 12rpx;
  padding-left: 24rpx;
  position: relative;
}

.modal-example::before {
  content: '';
  position: absolute;
  left: 0;
  top: 18rpx;
  width: 8rpx;
  height: 8rpx;
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  border-radius: 50%;
}
























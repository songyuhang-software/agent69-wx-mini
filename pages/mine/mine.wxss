/* pages/mine/mine.wxss */
.scrollarea {
  height: 100vh;
  box-sizing: border-box;
}

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  background: #f5f7fa;
}

/* 用户信息区域 */
.user-info-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

.user-info-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #007bff 0%, #0056b3 50%, #004085 100%);
  border-radius: 24rpx 24rpx 0 0;
}

.user-avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin-right: 24rpx;
  overflow: hidden;
}

.user-avatar-large image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-avatar-large.default {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #1976d2;
  font-weight: 500;
  border: 4rpx solid #dee2e6;
}

.user-basic-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #212529;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.username-line {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
}

.username {
  font-size: 24rpx;
  color: #6c757d;
}

.account-action-link {
  color: #007bff;
  font-size: 24rpx;
  font-weight: 500;
}

.user-bio {
  display: block;
  font-size: 26rpx;
  color: #495057;
  line-height: 1.6;
  font-style: italic;
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.user-footer-actions {
  padding-top: 20rpx;
  border-top: 1rpx solid #e9ecef;
  text-align: center;
}

.logout-btn {
  background: none;
  border: none;
  color: #6c757d;
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.logout-btn::after {
  border: none;
}

/* 详情卡片 */
.detail-section {
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #212529;
  margin: 0 0 16rpx 4rpx;
  padding-left: 20rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #007bff, #0056b3);
  border-radius: 2rpx;
}

.detail-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.detail-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.detail-content {
  flex: 1;
  min-width: 0;
}

.detail-label {
  display: block;
  font-size: 22rpx;
  color: #6c757d;
  margin-bottom: 6rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  font-weight: 500;
}

.detail-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #212529;
  font-weight: 500;
}

.detail-value text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 12rpx;
}

.action-small-btn {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  line-height: 1.5;
  flex-shrink: 0;
}

.action-small-btn::after {
  border: none;
}

.action-small-btn.danger {
  background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
}

/* 身份管理 */
.personas-section {
  margin-bottom: 24rpx;
}

.personas-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.personas-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #212529;
}

.add-persona-btn {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 6rpx;
  line-height: 1.5;
}

.add-persona-btn::after {
  border: none;
}

.personas-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.persona-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.persona-card.current {
  border: 2rpx solid #007bff;
  background: linear-gradient(135deg, rgba(0, 123, 255, 0.02) 0%, rgba(0, 123, 255, 0.05) 100%);
}

.persona-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 12rpx;
}

.persona-info {
  display: flex;
  align-items: flex-start;
  flex: 1;
  min-width: 0;
}

.persona-avatar-small {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin-right: 16rpx;
  overflow: hidden;
}

.persona-avatar-small image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.persona-avatar-small.default {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: #1976d2;
  border: 3rpx solid #1976d2;
}

.persona-details {
  flex: 1;
  min-width: 0;
}

.persona-name-row {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 6rpx;
}

.persona-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #212529;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.current-badge {
  background: linear-gradient(135deg, #e3f2fd, #bbdefb);
  color: #1976d2;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  font-size: 18rpx;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 4rpx;
  flex-shrink: 0;
}

.star-icon {
  font-size: 18rpx;
}

.persona-bio {
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.persona-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex-shrink: 0;
}

.action-icon-btn {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 24rpx;
  line-height: 1;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon-btn::after {
  border: none;
}

.empty-personas {
  text-align: center;
  padding: 48rpx 24rpx;
  color: #6c757d;
  font-size: 26rpx;
  font-style: italic;
  background: #ffffff;
  border-radius: 20rpx;
}

/* 账号操作区域 */
.account-actions-section {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e9ecef;
}

.account-actions-toggle {
  width: 100%;
  background: none;
  border: none;
  padding: 16rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 1.5;
}

.account-actions-toggle::after {
  border: none;
}

.toggle-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #6c757d;
}

.toggle-icon {
  font-size: 20rpx;
  color: #adb5bd;
  transition: transform 0.3s ease;
}

.account-actions-toggle.active .toggle-icon {
  transform: rotate(180deg);
}

.account-actions-content {
  overflow: hidden;
  transition: all 0.3s ease;
}

.account-actions-content.show {
  margin-top: 16rpx;
}

.account-action-item {
  width: 100%;
  background: #ffffff;
  border: none;
  padding: 20rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 16rpx;
  line-height: 1.5;
  box-shadow: 0 2rpx 8rpx rgba(220, 53, 69, 0.08);
}

.account-action-item::after {
  border: none;
}

.delete-account-item .action-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #dc3545;
}

.action-arrow {
  font-size: 32rpx;
  color: #dc3545;
}



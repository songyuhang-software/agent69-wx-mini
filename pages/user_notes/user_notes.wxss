/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  background: #f5f5f5;
}

/* 顶部标题栏 - 使用 JS 动态设置安全区域 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  /* padding-top 通过 style 动态设置 (safeAreaTop + 8px) */
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
}

/* 状态提示 - 使用 JS 动态设置位置 */
.status {
  text-align: center;
  padding: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  /* top 通过 style 动态设置 */
  left: 0;
  z-index: 99;
  animation: statusSlideIn 0.3s ease;
}

@keyframes statusSlideIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.status.success {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.status.error {
  background: #f8d7da;
  color: #721c24;
  border-bottom: 1rpx solid #f5c6cb;
}

.status.loading {
  background: #fff3cd;
  color: #856404;
  border-bottom: 1rpx solid #ffeaa7;
}

/* 聊天消息区域 - 使用 JS 动态设置位置 */
.chat-container {
  overflow-y: auto;
  padding: 0;
  background: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  /* top 和 bottom 通过 style 动态设置 */
  left: 0;
  right: 0;
}

.messages-wrapper {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 30rpx 0;
}

/* 消息外层容器 - 控制左右对齐 */
.message-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.user-wrapper {
  align-items: flex-end;
}

.assistant-wrapper {
  align-items: flex-start;
}

/* 消息气泡 - 包裹内容 */
.message {
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  max-width: 70%;
  line-height: 1.6;
  /* font-size 通过 style 动态设置 (fontScale * 32rpx) */
  animation: fadeIn 0.3s ease;
  box-sizing: border-box;
  display: inline-flex;
  flex-direction: column;
  width: auto;
  min-width: 0;
  overflow: visible;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 用户消息 */
.user-message {
  background: #667eea;
  color: white;
  border-bottom-right-radius: 6rpx;
  width: auto;
  max-width: 100%;
}

/* AI 消息 */
.assistant-message {
  background: white;
  color: #333;
  border-bottom-left-radius: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.12),
              0 2rpx 4rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.08);
  width: 100%;
  max-width: 100%;
}

/* 消息内容文字 */
.message-content {
  display: block;
  overflow-wrap: break-word;
  word-break: break-word;
  white-space: pre-wrap;
  overflow-wrap: break-word;
  align-items: stretch; /* 替换flex-start，让子元素拉伸至父容器宽度 */
  max-width: 100%;
  min-width: 0;
}

/* 时间标签样式 - 用于显示消息之间的时间分割 */
.time-label {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}

.time-label text {
  background: rgba(0, 0, 0, 0.08);
  color: #666;
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  line-height: 1;
  font-weight: 400;
}

/* 时间戳 */
.timestamp {
  display: block;
  font-size: 22rpx;
  margin-top: 8rpx;
  opacity: 0.7;
  word-wrap: break-word;
  word-break: break-word;
  max-width: 100%;
  min-width: 0;
}

.user-message .timestamp {
  color: rgba(255, 255, 255, 0.9);
}

.assistant-message .timestamp {
  color: #999;
}

/* 欢迎消息 */
.welcome-message {
  box-shadow: 0 6rpx 24rpx rgba(255, 193, 7, 0.2),
              0 4rpx 12rpx rgba(255, 152, 0, 0.15),
              0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 193, 7, 0.25);
  background: linear-gradient(135deg, #ffffff 0%, #fffbf0 100%);
  max-width: 85% !important;
}

/* 加载中动画 */
.loading {
  position: relative;
  padding-right: 60rpx !important;
}

.loading::after {
  content: '';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: translateY(-50%) rotate(0deg); }
  100% { transform: translateY(-50%) rotate(360deg); }
}

/* 加载更多提示 */
.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #666;
  font-size: 30rpx;
}

/* 输入区域 - 使用 JS 动态设置安全区域 */
.input-area {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 40rpx;
  /* padding-bottom 通过 style 动态设置 */
  background: white;
  border-top: 1rpx solid #e0e0e0;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}

.input-field {
  flex: 1;
  padding: 20rpx 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 40rpx;
  font-size: 32rpx;
  background: #f8f8f8;
}

.input-field:focus {
  border-color: #667eea;
  background: white;
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: 600;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.arrow-icon {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
  transform: translateY(-2rpx);
}

.send-button.disabled {
  background: #e0e0e0;
  opacity: 0.6;
  pointer-events: none;
  box-shadow: none;
}

.send-button.disabled .arrow-icon {
  color: #999;
}

/* 发送中状态 */
.send-button.sending {
  pointer-events: none;
  animation: sendingPulse 1.5s ease-in-out infinite;
  box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.7);
}

.send-button.sending .arrow-icon {
  animation: sendingRotate 1.2s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

@keyframes sendingPulse {
  0% {
    box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3),
                0 0 0 0 rgba(102, 126, 234, 0.7);
  }
  50% {
    box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.5),
                0 0 0 20rpx rgba(102, 126, 234, 0);
  }
  100% {
    box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3),
                0 0 0 0 rgba(102, 126, 234, 0);
  }
}

@keyframes sendingRotate {
  0% {
    transform: translateY(-2rpx) rotate(0deg) scale(1);
  }
  25% {
    transform: translateY(-2rpx) rotate(90deg) scale(1.1);
  }
  50% {
    transform: translateY(-2rpx) rotate(180deg) scale(1);
  }
  75% {
    transform: translateY(-2rpx) rotate(270deg) scale(1.1);
  }
  100% {
    transform: translateY(-2rpx) rotate(360deg) scale(1);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.5;
    transform: translateY(-2rpx) scale(0.9);
  }
  50% {
    opacity: 1;
    transform: translateY(-2rpx) scale(1.1);
  }
}

/* 推荐追问样式 */
.suggested-questions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 16rpx;
  width: 100%;
  max-width: 70%;
}

.suggested-question-item {
  background: transparent;
  border: 1rpx solid rgba(0, 0, 0, 0.15);
  border-radius: 16rpx;
  padding: 12rpx 24rpx;
  /* font-size 通过 style 动态设置 (fontScale * 28rpx) */
  color: #333;
  line-height: 1.5;
  transition: all 0.2s ease;
  cursor: pointer;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.suggested-question-item:active {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(0.98);
}

.question-text {
  display: block;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 用户消息不显示推荐追问 */
.user-wrapper .suggested-questions {
  display: none;
}

/* Markdown 样式支持 */
.message-content .markdown-code-block {
  background: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 16rpx 0;
  overflow-x: auto;
}

.message-content .markdown-code-content {
  font-family: 'Courier New', Consolas, Monaco, monospace;
  font-size: 26rpx;
  line-height: 1.5;
  color: #333;
  white-space: pre;
  display: block;
}

.message-content .markdown-heading-1 {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 24rpx 0 16rpx 0;
  line-height: 1.3;
}

.message-content .markdown-heading-2 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 14rpx 0;
  line-height: 1.3;
}

.message-content .markdown-heading-3 {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin: 18rpx 0 12rpx 0;
  line-height: 1.3;
}

.message-content .markdown-heading-4,
.message-content .markdown-heading-5,
.message-content .markdown-heading-6 {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin: 16rpx 0 10rpx 0;
  line-height: 1.3;
}

.message-content .markdown-ordered-list,
.message-content .markdown-unordered-list {
  margin: 16rpx 0;
  padding-left: 0;
}

.message-content .markdown-list-item {
  margin: 8rpx 0;
  line-height: 1.6;
  color: #333;
  padding-left: 32rpx;
  position: relative;
}

.message-content .markdown-ordered-item::before {
  content: attr(data-number) ". ";
  position: absolute;
  left: 0;
  color: #667eea;
  font-weight: bold;
}

.message-content .markdown-unordered-item::before {
  content: "• ";
  position: absolute;
  left: 8rpx;
  color: #667eea;
  font-weight: bold;
}

.message-content .markdown-blockquote {
  border-left: 4rpx solid #667eea;
  background: rgba(102, 126, 234, 0.05);
  margin: 16rpx 0;
  padding: 16rpx 20rpx;
  border-radius: 0 8rpx 8rpx 0;
}

.message-content .markdown-blockquote-content {
  color: #555;
  font-style: italic;
  line-height: 1.6;
}

.message-content .markdown-paragraph {
  margin: 12rpx 0;
  line-height: 1.6;
  color: #333;
}

.message-content .markdown-paragraph:first-child {
  margin-top: 0;
}

.message-content .markdown-paragraph:last-child {
  margin-bottom: 0;
}

/* 行内样式 */
.message-content strong {
  font-weight: bold;
  color: #333;
}

.message-content em {
  font-style: italic;
  color: #555;
}

.message-content del {
  text-decoration: line-through;
  color: #999;
}

.message-content .markdown-inline-code,
.message-content code {
  background: rgba(102, 126, 234, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  font-family: 'Courier New', Consolas, Monaco, monospace;
  font-size: 28rpx;
  color: #d63384;
}

.message-content a {
  color: #667eea;
  text-decoration: underline;
}
@import "prism.wxss";

.wemark_wrapper{
	margin:10px 0;
	font-size:32rpx;
	line-height: 1.8em;
	user-select: text;
	-webkit-user-select: text;
}
.wemark_block_h1{
	font-size:40rpx;
	text-align: center;
	margin-bottom:1em;
}
.wemark_block_h2{
	font-size:40rpx;
	padding-bottom:.5em;
	margin-top:1em;
	margin-bottom:1em;
	border-bottom:1px solid #f0f0f0;
}
.wemark_block_h3{
	font-size:36rpx;
	margin-top: 1em;
	margin-bottom: 1em;
}
.wemark_block_h4,
.wemark_block_h5,
.wemark_block_h6{
	font-weight: bold;
	margin-top: 1em;
	margin-bottom: 1em;
}
.wemark_block_p{
	margin-top:1em;
	margin-bottom:1em;
}
/* Skyline 渲染模式修复：包裹器样式 */
.wemark_block_p_wrapper {
	display: inline;
}
.wemark_block_video{
	margin-top:1em;
	margin-bottom:1em;
	width:100%;
}
.wemark_block_blockquote_p{
	margin-top:1em;
	margin-bottom:1em;
	padding:10px 0 10px 1em;
	font-size:28rpx;
	background:#f0f0f0;
	border-left:5px solid #e0e0e0;
}
.wemark_block_ul_li_p::before{
	content:'• ';
}
.wemark_block_ul_li_ul_li_p::before,
.wemark_block_ol_li_ul_li_p::before{
	content:'◦ ';
}
.wemark_block_ul_li_ul_li_p,
.wemark_block_ul_li_ol_li_p,
.wemark_block_ol_li_ul_li_p,
.wemark_block_ol_li_ol_li_p{
	padding-left: 1em;
}
.wemark_block_ul_li_p:last{
	margin-bottom:1em;
}
.wemark_block_code{
	display: block;
	padding:10px;
	font-size:28rpx;
	line-height: 1.5em;
	border:1px solid #f0f0f0;
	white-space: pre;
	overflow: auto;
}
.wemark_block_table{
	width: 100%;
	border-spacing: 0;
	border-collapse: collapse;
	/* border-left: 1px solid #e0e0e0; */
	/* border-top: 1px solid #e0e0e0; */
}
.wemark_block_table_tr{
	display: flex;
}
.wemark_wrapper_richtext .wemark_block_table_tr{
	display: table-row;
}
.wemark_inline_table_th,
.wemark_inline_table_td{
	flex:1;
	padding:5px;
	font-size:28rpx;
	word-break: break-all;
	border: 1px solid #e0e0e0;
	user-select: text;
	-webkit-user-select: text;
}
.wemark_wrapper_richtext .wemark_inline_table_th,
.wemark_wrapper_richtext .wemark_inline_table_td{
	display: table-cell;
	/* background:red;
	border-right:1px solid #e0e0e0;
	border-bottom:1px solid #e0e0e0; */
}
.wemark_inline_table_td:last{
	/* border-top:1px solid #e0e0e0; */
}
.wemark_inline_table_th{
	background:#f0f0f0;
	/* border-top:1px solid #e0e0e0; */
}
.wemark_inline_strong{
	font-weight: bold;
	padding:0 5px;
	word-wrap:break-word;
}
.wemark_inline_em{
	font-style: italic;
	padding:0 5px;
	word-wrap:break-word;
}
.wemark_inline_strong_em{
	font-style: italic;
	font-weight: bold;
	padding:0 5px;
	word-wrap:break-word;
}
.wemark_inline_deleted{
	text-decoration: line-through;
	padding:0 5px;
	word-wrap:break-word;
}
.wemark_inline_image{
	width:100%;
	height:auto;
}
.wemark_inline_code{
	background:#f0f0f0;
	padding:3px 5px;
	word-wrap:break-word;
}
.wemark_inline_text{
	word-wrap:break-word;
	user-select: text;
	-webkit-user-select: text;
}
.wemark_inline_link{
	display: inline;
	color: blue;
	word-wrap:break-word;
}

/* 横向表格样式 */
.wemark_table_horizontal{
	display: flex;
	margin: 20rpx 0;
	border: 1px solid #e0e0e0;
	border-radius: 8rpx;
	overflow: hidden;
}

.wemark_table_cell_table_th{
	flex: 1;
	background-color: #f0f0f0;
	padding: 15rpx;
	font-weight: bold;
	border-right: 1px solid #e0e0e0;
	user-select: text;
	-webkit-user-select: text;
}

.wemark_table_cell_table_td{
	flex: 1;
	padding: 15rpx;
	border-right: 1px solid #e0e0e0;
	user-select: text;
	-webkit-user-select: text;
}

.wemark_table_cell_table_td:last-child{
	border-right: none;
}

/* 纵向表格样式 */
.wemark_table_vertical{
	width: 100%;
	margin: 20rpx 0;
	border: 1px solid #e0e0e0;
	border-radius: 8rpx;
	overflow: hidden;
}

.wemark_table_header_row{
	display: flex;
	border-bottom: 1px solid #e0e0e0;
}

.wemark_table_data_row{
	display: flex;
	border-bottom: 1px solid #f5f5f5;
}

.wemark_table_data_row:last-child{
	border-bottom: none;
}

/* 最高优先级：统一所有第一列单元格的宽度为90rpx */
.wemark_table_vertical .wemark_table_cell_table_th:first-child,
.wemark_table_vertical .wemark_table_cell_table_td:first-child{
	flex: 0 0 auto !important;
	width: 90rpx !important;
	min-width: 90rpx !important;
	max-width: 90rpx !important;
	background-color: #f0f0f0 !important;
	font-weight: bold !important;
	text-align: center !important;
	padding: 15rpx;
	border-right: 1px solid #e0e0e0;
	word-wrap: break-word;
	display: flex; /* 添加弹性布局 */
	justify-content: center; /* 水平居中 */
	align-items: center; /* 垂直居中 */
	line-height: 1.4; /* 改善行高 */
}

/* 表头行第一列特殊处理（保持灰色背景） */
.wemark_table_header_row .wemark_table_cell_table_th:first-child{
	background-color: #f0f0f0 !important;
}

/* 数据行第一列特殊处理（保持灰色背景） */
.wemark_table_data_row .wemark_table_cell_table_td:first-child{
	background-color: #f0f0f0 !important;
	font-weight: bold !important; /* 保持粗体 */
}

/* 所有非第一列的表头单元格 */
.wemark_table_header_row .wemark_table_cell_table_th:not(:first-child){
	flex: 1;
	background-color: #ffffff !important;
	text-align: center;
	word-wrap: break-word;
	padding: 15rpx;
	border-right: 1px solid #e0e0e0;
	font-weight: bold !important; /* 添加粗体 */
	display: flex; /* 添加弹性布局 */
	justify-content: center; /* 水平居中 */
	align-items: center; /* 垂直居中 */
	line-height: 1.4; /* 改善行高 */
}

/* 所有非第一列的数据单元格 */
.wemark_table_data_row .wemark_table_cell_table_td:not(:first-child){
	flex: 1;
	background-color: #ffffff !important;
	padding: 15rpx;
	border-right: 1px solid #e0e0e0;
	text-align: center; /* 与表头内容栏保持一致 */
	font-weight: bold !important; /* 添加粗体 */
	word-wrap: break-word;
	display: flex; /* 添加弹性布局 */
	justify-content: center; /* 水平居中 */
	align-items: center; /* 垂直居中 */
	line-height: 1.4; /* 改善行高 */
}

/* 最后一列无右边框 */
.wemark_table_header_row .wemark_table_cell_table_th:last-child,
.wemark_table_data_row .wemark_table_cell_table_td:last-child{
	border-right: none;
}





































